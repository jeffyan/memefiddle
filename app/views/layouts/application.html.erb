<!DOCTYPE html>
<html ng-app="memeFiddle">
<head>
  <title>Memefiddle</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body ng-controller="MemeCtrl">
    <header class="navbar navbar-fixed-top navbar-inverse">
		<div class="navbar-header">
        	<a class="navbar-brand" href="#/">memeFiddle</a>
    	</div>
    	<nav>
    	<ul class="nav navbar-nav">
            <li><a href="#/">New</a></li>
            <li><a href="#/browse">Browse</a></li>
          </ul>
      </nav>
    </header>

    <main role="main">
        <div ng-view></div>
    </main>

    <footer>
    </footer>


    <section id="modal-templates">
        <script type="text/ng-template" id="template/modal/backdrop.html">
            <div class="modal-backdrop fade" ng-class="{in: animate}" ng-style="{'z-index': 1040 + index*10}" ng-click="close($event)"></div>
        </script>
        <script type="text/ng-template" id="template/modal/window.html">
            <div class="modal2 fade {{ windowClass }}" ng-class="{in: animate}" ng-style="{'z-index': 1050 + index*10}" ng-transclude></div>
        </script>
        <script type="text/ng-template" id="addTextModalTemplate.html">
            <div class="modal-body">
                <label>Enter Text:</label>
                <input type="text" class="form-control" ng-model="modal.modaltext"/>
            </div>
            <div class="modal-footer">
                <button class="btn btn-primary" ng-click="add()">Add</button>
                <button class="btn btn-warning" ng-click="cancel()">Cancel</button>
            </div>
        </script>
        <script type="text/ng-template" id="customCanvasSizeModalTemplate.html">
            <form name="form">
                <div class="modal-body">
                    <label>Width:</label>
                    <div class="input-group">
                        <input type="number" class="form-control" ng-model="modal.width"/>
                        <span class="input-group-addon">px</span>
                    </div>
                    
                    <label>Height:</label>
                    <div class="input-group">
                        <input type="number" class="form-control" ng-model="modal.height"/>
                        <span class="input-group-addon">px</span>
                    </div>
                    
                    <span ng-show="!form.$valid">Please enter numbers for width and height</span>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-primary" ng-click="add()" ng-hide="!form.$valid">Change</button>
                    <button class="btn btn-warning" ng-click="cancel()">Cancel</button>
                </div>
            </form>
        </script>
        <script type="text/ng-template" id="addPhotoModalTemplate.html">
            <div class="modal-body">
                <label>Browse for Image:</label>
                <input type="file" ng-file-select="onFileSelect($files, 1)" />
                <label>Get Image from Url:</label>
                <input type="text" class="form-control" ng-model="modal.imageurl" />

                <div ng-bind-html-unsafe="message" class="alert" ng-show="message" ng-class="alert"></div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-primary" ng-click="add()" ng-show="validimage">Add</button>
                <button class="btn btn-warning" ng-click="cancel()">Cancel</button>
            </div>
        </script>
    </section>

  </body>
</html>
